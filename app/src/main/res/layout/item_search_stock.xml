<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_search_stock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_04"
    app:contentPaddingTop="@dimen/dp_04"
    app:contentPaddingBottom="@dimen/dp_04"
    app:cardElevation="@dimen/dp_02"
    app:cardBackgroundColor="?attr/windowBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_add_search_stock"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:background="@null"
            android:src="@mipmap/ic_add_black_24dp"
            android:tint="@color/colorRed"
            android:contentDescription="@null"/>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_code_search_stock_result_item"
            android:layout_toLeftOf="@id/ib_add_search_stock"
            android:layout_toStartOf="@id/ib_add_search_stock"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/sp_18"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>