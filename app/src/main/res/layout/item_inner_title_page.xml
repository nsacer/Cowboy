<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/windowBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp_02"
    app:cardElevation="@dimen/dp_04">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_08">

        <customview.CircleImageView
            android:id="@+id/civ_header_inner"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_04"
            android:layout_marginEnd="@dimen/dp_04"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tv_author_inner"
            android:layout_toRightOf="@id/civ_header_inner"
            android:layout_toEndOf="@id/civ_header_inner"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_02"
            android:layout_marginStart="@dimen/dp_02"
            android:textSize="@dimen/sp_tab_one_article_author"
            android:textColor="@color/tab_index_author"/>

        <TextView
            android:id="@+id/tv_title_inner"
            android:layout_below="@id/civ_header_inner"
            android:layout_marginTop="@dimen/dp_08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_tab_one_article_title"/>

        <TextView
            android:id="@+id/tv_read_inner"
            android:layout_below="@id/tv_title_inner"
            android:layout_marginTop="@dimen/dp_08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_tab_one_article_read"
            android:textColor="@color/tab_index_read"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>